<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/grey"><!--Цвет при нажатии-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!--Цвет изначально-->
            <stroke android:width="1dp" android:color="@color/light_grey"/>
            <corners android:bottomRightRadius="8dp" android:bottomLeftRadius="8dp"/>
        </shape>
    </item>
</ripple>